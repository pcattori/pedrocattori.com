        </div>
      </div>
      <nav
        class="px-4 py-2 border-b border-dashed text-xs font-light space-x-6"
      >
        {
          links.map((link) => (
            <a
              class={isActive(link.href) ? "text-pine underline" : "text-muted"}
              href={link.href}
            >
              {link.text}
            </a>
          ))
        }
      </nav>
    </header>
    <main class="border-l border-ink">
      <slot />
    </main>
    <footer class="border-l border-ink font-roboto h-24">
      <div class="mt-8 border-t border-dashed px-4 py-2">
        <span class="text-muted font-light text-sm">
